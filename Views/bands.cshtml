<!DOCTYPE html>
<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <meta charset="utf-8">
  <title></title>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h2>Bands</h2>
      <form  action="/bands/add" method="post">
        <label for="bands">Band Name</label>
        <input type="text" name="bands">
        <button type="submit" name="button">Add Band</button>
      </form>
    </div>
    <div class="jumbotron">
      <ul>

        @if(Model.Count !=0)
        {
          @foreach(var band in Model)
          {
            <li><a href="/bands/@band.GetId()"><h3>@band.GetName()</h3></a></li>
          }

        }
        else
        {
          <p>
            No Bands Added Yet!
          </p>
        }
      </ul>

    </div>

  </div>


</body>
</html>
